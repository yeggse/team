	<!-- 사업자 메뉴관리 페이지 게시물 갯수 -->
	<select id="selectResmenuCnt" resultType="int">	
		SELECT 
			COUNT(*) AS CNT
		FROM
			t3_resmenu
	</select>
	

</mapper>